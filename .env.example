# Environment Configuration for Polymarket Strategy Tester v2.0

# Strategy thresholds
UNDERVALUED_THRESHOLD=0.48
MOMENTUM_THRESHOLD=0.52
ORDER_SIZE_SHARES=10

# Entry/exit timing (seconds before market start)
ENTRY_COUNTDOWN_SECONDS=1200
EXIT_COUNTDOWN_SECONDS=930

# Paper trading simulation
PAPER_MODE=true
SIM_FILL_PROBABILITY=0.7

# Coin enables (set to false to disable)
ENABLE_BTC=true
ENABLE_ETH=true
ENABLE_SOL=true
ENABLE_XRP=true

# Logging
LOG_LEVEL=INFO
